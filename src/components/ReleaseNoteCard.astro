---
export interface Props {
  title: string;
  date: string;
  excerpt: string;
  link: string;
}

const { title, date, excerpt, link } = Astro.props;
---

<a href={link} class="release-note-card">
  <h2>{title}</h2>
  <p class="release-note-date">{new Date(date).toLocaleDateString()}</p>
  <p class="release-note-excerpt">{excerpt}</p>
</a>

<style>
  .release-note-card {
    display: block;
    text-decoration: none;
    padding: var(--starlight-spacing-md, 1rem);
    border: 1px solid var(--starlight-border, #ddd);
    border-radius: var(--starlight-radius, 4px);
    margin-bottom: var(--starlight-spacing-lg, 1.5rem);
    transition: background-color 0.3s ease;
    color: var(--starlight-text, #333);
  }
  .release-note-card:hover {
    background-color: var(--starlight-background-hover, #f9f9f9);
  }
  .release-note-date {
    font-size: 0.875rem;
    color: var(--starlight-secondary-text, #888);
  }
</style> 